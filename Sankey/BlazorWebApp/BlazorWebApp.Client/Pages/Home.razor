@page "/"

<SfSankey BackgroundColor="#0b1320" Title="Global Coffee Production and Consumption Flow"
          SubTitle="Global Coffee Journey" Nodes=@Nodes Links=@Links>
    <SankeyTitleStyle FontStyle="italic" FontWeight="600" Color="white" />
    <SankeySubtitleStyle FontSize="12px" FontStyle="italic" FontWeight="400" Color="white" />
    <SankeyNodeSettings Color="#1c3f60" Width="10" Padding="20" />
    <SankeyLinkSettings Color="#afc1d0" Opacity="0.2" />
    <SankeyLabelSettings Color="#FFFFFF" FontWeight="400" />
    <SankeyLegendSettings Visible="false" />
</SfSankey>

